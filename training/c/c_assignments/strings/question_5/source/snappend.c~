#include"header.h"

char* snappend(char *src, char *dest, int size)
{
	int dest_len = str_len(dest);
	int src_len = str_len(src); 
	int i = dest_len;
	int j = 0;
/*	while((size != 0) && (i <= (src_len + dest_len)))  {
		dest[i] = src[j];
		i++;
		j++;
		size--;
	}*/

	for(i = dest_len, j = 0; i < (size + dest_len); i++, j++)
		*(dest + i) = *(src + j);
	*(dest + dest_len + size) = '\0';	

	return dest;
	
}
