void showbits(int c)
{       
        int i;
        int count=0;
        i=sizeof(int)*8;
        for(;i>0;i--)
        {
                printf("%d",(1&(c>>(i-1))));
                count++;
                if(count%8==0)
                        printf(" ");
                
        }
}

